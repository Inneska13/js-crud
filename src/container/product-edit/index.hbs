{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Редагування товару</h1>
      {{#with data}}

        <form method='POST' action='/product-edit'>
          <div class='form__content'>
            <div class='form__label__input'>
              <div class='form__field'>
                <label for='name' class='form__label'>
                  Назвва товару
                </label>
                <input
                  type='name'
                  name='name'
                  class='form__input'
                  value='{{name}}'
                />
              </div>
              <div class='form__field'>
                <label for='price' class='form__label'>
                  Ціна
                </label>
                <input
                  type='price'
                  name='price'
                  class='form__input'
                  value='{{price}}'
                />
              </div>
              <div class='form__field'>
                <label for='id' class='form__label'>
                  ID
                </label>
                <input
                  type='id'
                  name='id'
                  class='form__input'
                  value='{{id}}'
                />
              </div>
            </div>
            <div class='form__field'>
              <label for='description' class='form__label'>
                Короткий опис товару
              </label>
              <input
                type='description'
                name='description'
                class='form__input'
                value='{{description}}'
              />

              <input
                placeholder='Відображається у картці товару'
              />
            </div>
            <div class='form__button'><button
                class='btn-primary'
              >Зберегти оновлення</button>
              <a
                href='/product-delete?id={{id}}'
                class='btn-danger'
              >Видалити товар</a></div>
          </div>

        </form>
      {{/with}}
    </div>
  </section>

</main>
