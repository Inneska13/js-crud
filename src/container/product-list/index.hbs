<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Інформація про товар</h1>

      <form method='POST' action='/user-create'>
        <div class='form__content'>

          <div class='form__label__input'>
            <div class='form__field'>
              <label for='name' class='form__label'>
                Назвва товару
              </label>
              <input
                type='name'
                name='name'
                class='form__input'
              />
            </div>

            <div class='form__field'>
              <label for='price' class='form__label'>
                Ціна
              </label>
              <input
                type='price'
                name='price'
                class='form__input'
              />
            </div>
          </div>

          <div class='form__field'>
            <label for='description' class='form__label'>
              Короткий опис товару
            </label>
            <input
              type='description'
              name='description'
              class='form__input'
            />
            <input
              placeholder='Відображається у картці товару'
            />

          </div>

          <button class='form__button btn-primary'>Створити
            товар</button>

        </div>
      </form>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Список товарів</h1>

      <div class='user__list'>
        {{#with data.products}}

          {{#if isEmpty}}{{else}}
            <ul>
              {{#each list}}
                <li>{{name}}
                  |
                  {{price}}
                  |
                  {{id}}</li>
              {{/each}}
            </ul>
          {{/if}}

        {{/with}}
      </div>

    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Інформація про товар</h1>

      <form method='POST' action='/user-update'>
        <div class='form__content'>

          <div class='form__label__inputs'>
            <div class='form__field'>
              <label for='id' class='form__label'>
                ID:
              </label>
              <input
                type='id'
                name='id'
                class='form__input'
              />
            </div>

            <div class='form__field'>
              <label for='name' class='form__label'>
                Назвва товару
              </label>
              <input
                type='name'
                name='name'
                class='form__input'
              />
            </div>

            <div class='form__field'>
              <label for='price' class='form__label'>
                Ціна
              </label>
              <input
                type='price'
                name='price'
                class='form__input'
              />
            </div>
          </div>

          <div class='form__field'>
            <label for='description' class='form__label'>
              Короткий опис товару
            </label>
            <input
              type='description'
              name='description'
              class='form__input'
            />
            <input
              placeholder='Відображається у картці товару'
            />

          </div>

          <div class='two__button'>
            <button
              class='form__button btn-primary'
            >Зберегти оновлення</button>
            <button class='form__button btn-danger'>Видалити
              товар</button>
          </div>

        </div>
      </form>
    </div>
  </section>
</main>

